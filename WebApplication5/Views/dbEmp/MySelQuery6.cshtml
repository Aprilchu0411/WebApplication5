@model IEnumerable<WebApplication5.Models.Tablemy5Tables1101661>
@{
    ViewBag.Title = "MySelQuery6";
}

<h2>查詢結果</h2>


<table class="table table-striped table-bordered table-hover">
    <caption>歌曲資料</caption>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Song)</th>
            <th>@Html.DisplayNameFor(m => m.Singer)</th>
            <th>@Html.DisplayNameFor(m => m.Album)</th>
            <th>@Html.DisplayNameFor(m => m.Clickthroughrate)</th>
            <th>@Html.DisplayNameFor(m => m.Time)</th>
            <th>異動</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => m.Id)</td>
                <td>@Html.DisplayFor(x => m.Song)</td>
                <td>@Html.DisplayFor(x => m.Singer)</td>
                <td>@Html.DisplayFor(x => m.Album)</td>
                <td>@Html.DisplayFor(x => m.Clickthroughrate)</td>
                <td>@Html.DisplayFor(x => m.Time)</td>
                <td>
                    @Html.ActionLink("明細", "Details6", new { id = m.Id }, htmlAttributes: new { @class = "btn btn-info" })
                    @Html.ActionLink("編輯", "Edit6", new { id = m.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                    @Html.ActionLink("刪除", "Delete6", new { id = m.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7"><div style="text-align: center">各種歌曲都在Music Box裡</div></td>
        </tr>
    </tfoot>
</table>


<p>
    @Html.ActionLink("新增歌曲", "Create6", null, new { @class = "btn btn-warning" })
</p>
@section topCSS{
    <style>
        /*設定caption*/
        .table > caption {
            margin-top: 10px;
            background-color: lightpink;
            font-size: x-large;
        }

        /*設定thead顏色*/
        .table > thead > tr {
            color: white;
            background-color: black;
        }

        /*設定tfoot顏色及文字對齊*/
        .table > tfoot > tr {
            background-color: lightgray;
            font-size: large;
        }

        /*設定文字對齊*/
        .table > caption, .table > thead > tr > th, .table > tfoot > tr {
            text-align: center;
        }
    </style>
}