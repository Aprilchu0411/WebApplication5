@using PagedList
@using PagedList.Mvc
@model IPagedList<WebApplication5.Models.Tablemy1Tables1101661>
@{
    ViewBag.Title = "Index5";
}

<h2>
    歌曲列表
</h2>
<h3 style="text-align:right">
    @Html.ActionLink("專輯查詢", "Query", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("ID查詢", "SelectQuery", null, new { @class = "btn btn-warning" })
</h3>

<table class="table table-striped table-bordered table-hover">
    <caption>
        歌曲資料

    </caption>

    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Id)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Song)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Singer)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Album)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Clickthroughrate)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Time)</th>
            <th>異動</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => m.Id)</td>
                <td>@Html.DisplayFor(x => m.Song)</td>
                <td>@Html.DisplayFor(x => m.Singer)</td>
                <td>@Html.DisplayFor(x => m.Album)</td>
                <td>@Html.DisplayFor(x => m.Clickthroughrate)</td>
                <td>@Html.DisplayFor(x => m.Time)</td>
                <td>
                    @Html.ActionLink("明細", "Details", new { id = m.Id }, htmlAttributes: new { @class = "btn btn-info" })
                    @Html.ActionLink("編輯", "Edit", new { id = m.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                    @Html.ActionLink("刪除", "Delete", new { id = m.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7"><div style="text-align: center">各種歌曲都在Music Box裡</div></td>
        </tr>
    </tfoot>
</table>

@Html.PagedListPager(Model, page => Url.Action("Index5", new { page }))
<p>
    @Html.ActionLink("新增歌曲", "Create", null, new { @class = "btn btn-warning" })
</p>
@section topCSS{
    <style>
        /*設定caption*/
        .table > caption {
            margin-top: 10px;
            background-color: lightpink;
            font-size: x-large;
        }

        /*設定thead顏色*/
        .table > thead > tr {
            color: white;
            background-color: black;
        }

        /*設定tfoot顏色及文字對齊*/
        .table > tfoot > tr {
            background-color: lightgray;
            font-size: large;
        }

        /*設定文字對齊*/
        .table > caption, .table > thead > tr > th, .table > tfoot > tr {
            text-align: center;
        }
    </style>
}