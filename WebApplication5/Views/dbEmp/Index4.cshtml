@using PagedList
@using PagedList.Mvc
@model IPagedList<WebApplication5.Models.Tablemy4Tables1101661>
@{
    ViewBag.Title = "Index3";
}

<h2>
    會員資料
</h2>

<table class="table table-striped table-bordered table-hover">
    <caption>
        會員資料

    </caption>

    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Id)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Password)</th>
            <th>異動</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => m.Id)</td>
                <td>@Html.DisplayFor(x => m.Password)</td>
                <td>
                    @Html.ActionLink("明細", "Details4", new { id = m.Id }, htmlAttributes: new { @class = "btn btn-info" })
           
                    @Html.ActionLink("刪除", "Delete4", new { id = m.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7"><div style="text-align: center">各種歌曲都在Music Box裡</div></td>
        </tr>
    </tfoot>
</table>

@Html.PagedListPager(Model, page => Url.Action("Index4", new { page }))
<p>
    @Html.ActionLink("註冊", "Create4", null, new { @class = "btn btn-warning" })
</p>
@section topCSS{
    <style>
        /*設定caption*/
        .table > caption {
            margin-top: 10px;
            background-color: lightpink;
            font-size: x-large;
        }

        /*設定thead顏色*/
        .table > thead > tr {
            color: white;
            background-color: black;
        }

        /*設定tfoot顏色及文字對齊*/
        .table > tfoot > tr {
            background-color: lightgray;
            font-size: large;
        }

        /*設定文字對齊*/
        .table > caption, .table > thead > tr > th, .table > tfoot > tr {
            text-align: center;
        }
    </style>
}